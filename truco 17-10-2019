class Mazo{
var valor
var tanto
var numero
}

class Espada  inherits mazo{
	var palo	"espada"
}

class Basto  inherits mazo{
	var palo = "basto"	
}

class Oro  inherits mazo{
	var palo	"oro"
}

class Copa  inherits mazo{
	var palo = "copa"	
}
